<?xml version="1.0"?>
<ruleset name="CodeKata"
    xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

    <description>
        Collection of rules for code katas, Coding Dojos and Code Retreats.
    </description>

    <!-- No conditional statements (Missing Feature) -->
    <rule ref="rulesets/java/constraints.xml/NoConditionals" />

    <!-- No loops (Missing Feature) -->
    <rule ref="rulesets/java/constraints.xml/NoLoops" />

    <!-- Cyclomatic Complexity of one -->
    <rule ref="rulesets/java/codesize.xml/CyclomaticComplexity">
        <properties>
            <property name="reportLevel" value="2" />  
            <property name="showClassesComplexity" value="false" /> 
        </properties>
    </rule>

    <!-- No naked primitives (Missing Feature) -->
    <rule ref="rulesets/java/codecop.xml/PrimitiveObsession">
        <properties>
            <property name="allowObject" value="false" />  
        </properties>
    </rule>

    <!-- Only void methods (Missing Feature) -->
    <rule ref="rulesets/java/constraints.xml/OnlyVoidMethods" />

    <!-- Only four lines per method (Quality Constraint) -->
    <rule ref="rulesets/java/codesize.xml/NcssMethodCount">
        <properties>
            <property name="minimum" value="6" /> <!-- = 4 lines plus signature --> 
        </properties>
    </rule>

    <!-- Only one Level of intention (Quality Constraint) -->
    <!--  TODO <rule ref="rulesets/java/constraints.xml/OneLevelOfIntention" /> -->

    <!-- No void methods -->
    <rule ref="rulesets/java/constraints.xml/NoVoidMethods" />

    <!-- Immutables only (Quality Constraint) -->    
    <rule ref="rulesets/java/constraints.xml/ImmutablesOnly" />
    <!-- TODO alle fields final, alle parameter final, alle local vars final -->
    
    <!-- Law of Demeter -->
    <rule ref="rulesets/java/coupling.xml/LawOfDemeter" />

</ruleset>
