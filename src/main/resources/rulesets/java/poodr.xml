<?xml version="1.0"?>
<ruleset name="CodeKata"
    xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

    <description>
        Collection of rules following POODR extensibility.
    </description>

    <!-- all calls are messaged and as such against an interface of a single method -->
    <rule ref="rulesets/java/codecop.xml/TooManyInterfaceMethods">
        <properties>
            <property name="maxMethods" value="1" />  
        </properties>
    </rule>
    
    <rule ref="rulesets/java/constraints.xml/OnlyMapsAsParameters" />
    

</ruleset>
